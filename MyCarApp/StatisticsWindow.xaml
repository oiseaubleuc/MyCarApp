<Window x:Class="MyCarApp.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Top Viewed Cars" Height="400" Width="600">
    <Grid>
        <TextBlock Text="Top 5 Meest Bekeken Auto's" FontSize="18" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
        <DataGrid ItemsSource="{Binding TopViewedCars}" AutoGenerateColumns="False" Margin="10,50,10,10" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Model" Binding="{Binding Model}" />
                <DataGridTextColumn Header="Kleur" Binding="{Binding Color}" />
                <DataGridTextColumn Header="Weergaven" Binding="{Binding ViewCount}" />
                <DataGridTextColumn Header="Prijs" Binding="{Binding Price, StringFormat=C}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
