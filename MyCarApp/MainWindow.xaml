<Window x:Class="MyCarApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard - Auto's Beheren" Height="500" Width="800">
    <Grid>
        <StackPanel Margin="10">

            <!-- Dashboard Titel -->
            <TextBlock Text="Advertentielijst" FontSize="24" FontWeight="Bold" Margin="10,0,0,10"/>

            <!-- Auto Toevoegen Knop -->
            <Button Content="Auto Toevoegen" Click="AddCar_Click" Width="150" HorizontalAlignment="Left" Margin="0,0,0,10" />

            <!-- Lijst van auto's -->
            <ListView x:Name="CarListView" Margin="0,0,0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Model" DisplayMemberBinding="{Binding Model}" Width="150"/>
                        <GridViewColumn Header="Kleur" DisplayMemberBinding="{Binding Color}" Width="100"/>
                        <GridViewColumn Header="Brandstof" DisplayMemberBinding="{Binding FuelType}" Width="150"/>
                        <GridViewColumn Header="Prijs" DisplayMemberBinding="{Binding Price}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Paginering Knoppen -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Vorige" Click="PreviousPage_Click" Width="100" Margin="10,0"/>
                <TextBlock x:Name="PageInfoTextBlock" FontSize="16" VerticalAlignment="Center"/>
                <Button Content="Volgende" Click="NextPage_Click" Width="100" Margin="10,0"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
