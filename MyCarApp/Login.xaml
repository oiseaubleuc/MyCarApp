<Window x:Class="MyCarApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
           
            <Label Content="Admin Login" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />

            
            <Label Content="Gebruikersnaam" HorizontalAlignment="Left" />
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10" />

            
            <Label Content="Wachtwoord" HorizontalAlignment="Left" />
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,20" />

            
            <Button Content="Login" Click="LoginButton_Click" Width="100" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
